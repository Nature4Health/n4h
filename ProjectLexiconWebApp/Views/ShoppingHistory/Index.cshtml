@model ApplicationUser


<div>
    <h2> User Information</h2>   
</div>

    <div class="container bootstrap snippets bootdey">
        <div class="panel-body inf-content">
            <div class="row">
             
                <div class="col-md-6">
                    <div class="table-responsive">
                        <table class="table table-user-information">
                            <tbody>
                                <tr>
                                    <td>
                                        <strong>
                                            <span class="glyphicon glyphicon-user text-success"></span>
                                            First Name
                                        </strong>
                                    </td>
                                <td class="text-success">
                                        @Model.FirstName
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <strong>
                                        <span class="glyphicon glyphicon-cloud text-success"></span>
                                            Last Name
                                        </strong>
                                    </td>
                                <td class="text-success">
                                        @Model.LastName
                                    </td>
                                </tr>

                                <tr>
                                    <td>
                                        <strong>
                                        <span class="glyphicon glyphicon-bookmark text-success"></span>
                                            Address
                                        </strong>
                                    </td>
                                <td class="text-success">
                                        @Model.Address
                                    </td>
                                </tr>

                                <tr>
                                    <td>
                                        <strong>
                                        <span class="glyphicon glyphicon-bookmark text-success"></span>
                                            ZipCode
                                        </strong>
                                    </td>
                                <td class="text-success">
                                        @Model.ZipCode
                                    </td>
                                </tr>

                                <tr>
                                    <td>
                                        <strong>
                                        <span class="glyphicon glyphicon-bookmark text-success"></span>
                                            City
                                        </strong>
                                    </td>
                                <td class="text-success">
                                        @Model.City
                                    </td>
                                </tr>

                                <tr>
                                    <td>
                                        <strong>
                                        <span class="glyphicon glyphicon-eye-open text-success"></span>
                                            Email
                                        </strong>
                                    </td>
                                <td class="text-success">
                                        @Model.Email
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <strong>
                                        <span class="glyphicon glyphicon-eye-open text-success"></span>
                                            Phone
                                        </strong>
                                    </td>
                                <td class="text-success">
                                        @Model.Phone
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
                <div> 
                    <a class="btn btn-success" asp-action="EditUserProfile" asp-route-email="@Model.Email" asp-route-email="@Model.Email">Edit</a>
                </div>
                <div >
                    <a class="btn btn-success" asp-action="ShoppingHistory" asp-route-email="@Model.Email">Shopping History</a>
                </div>
            </div>
        </div>

    </div>

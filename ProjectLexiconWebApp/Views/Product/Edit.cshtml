@model Product


<div>
    <h3>Edit product</h3>
    <form asp-controller="Product" asp-action="Edit" method="post">
        <fieldset>
            <div>
                <label asp-for="@Model.Name"></label>
                <input class="form-input" asp-for="@Model.Name">
                <span asp-validation-for="@Model.Name"> </span>
            </div>
            <div>
                <label asp-for="@Model.Description"></label>
                <input class="form-input" asp-for="@Model.Description">
                <span asp-validation-for="@Model.Description"> </span>
            </div>
            <div>
                <label asp-for="@Model.UnitPrice"></label>
                <input class="form-input" asp-for="@Model.UnitPrice">
                <span asp-validation-for="@Model.Product.UnitPrice"> </span>
            </div>
            <div>
                <label asp-for="@Model.DiscountedPrice"></label>
                <input class="form-input" asp-for="@Model.DiscountedPrice">
                <span asp-validation-for="@Model.DiscountedPrice"> </span>
            </div>
            <div>
                <label asp-for="@Model.Picture"></label>
                <input class="form-input" asp-for="@Model.Picture">
                <span asp-validation-for="@Model.Picture"> </span>
            </div>
            <div>
                <label asp-for="@Model.Size"></label>
                <input class="form-input" asp-for="@Model.Size">
                <span asp-validation-for="@Model.Size"> </span>
            </div>
            <div>
                <label asp-for="@Model.Quantity"></label>
                <input class="form-input" asp-for="@Model.Quantity">
                <span asp-validation-for="@Model.Quantity"> </span>
            </div>
            <div>
                <label>Select Product Category:</label>
                <select asp-for="@Model.CategoryId" asp-items="@ViewBag.Categories"></select>
                <span asp-validation-for="@Model.CategoryId"> </span>
            </div>
            <button id="submit" type="submit">Save</button>
        </fieldset>
    </form>
</div>
